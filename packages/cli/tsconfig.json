{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    // 排除src目录下的lib文件夹下的文件不会编译
    "lib",
    "node_modules"
  ]
}
